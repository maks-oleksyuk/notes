{
  "homepage": "https://maks-oleksyuk.github.io/notes",
  "license": "GPL-3.0-or-later",
  "author": {
    "name": "Maks Oleksyuk",
    "url": "https://github.com/maks-oleksyuk"
  },
  "type": "module",
  "scripts": {
    "dev": "webpack --progress --watch",
    "build": "webpack --progress --mode production --node-env production ",
    "lint": "run-p -cls lint:js lint:style lint:format",
    "lint:fix": "run-p -cls lint:*:fix",
    "lint:js": "eslint js --no-error-on-unmatched-pattern --color",
    "lint:js:fix": "eslint js --no-error-on-unmatched-pattern --fix",
    "lint:style": "stylelint styles --aei --cache --cache-location node_modules/.cache/stylelint/ --color",
    "lint:style:fix": "stylelint styles --aei --cache --cache-location node_modules/.cache/stylelint/ --fix",
    "lint:format": "prettier styles js -c --cache --no-error-on-unmatched-pattern --color",
    "lint:format:fix": "prettier styles js -wl --cache --no-error-on-unmatched-pattern",
    "postinstall": "sed -i '/\"airbnb-base\",/d;/^ *$/d' ../../../web/core/.eslintrc.json || true"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.19",
    "clean-webpack-plugin": "^4.0.0",
    "css-loader": "^7.1.1",
    "eslint": "8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jquery": "^1.5.1",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-yml": "^1.14.0",
    "glob": "^10.3.15",
    "mini-css-extract-plugin": "^2.9.0",
    "npm-run-all": "^4.1.5",
    "postcss-loader": "^8.1.1",
    "postcss-perfectionist": "^2.3.9",
    "postcss-rtlcss": "^5.2.0",
    "prettier": "^3.2.5",
    "sass": "^1.77.2",
    "sass-loader": "^14.2.1",
    "stylelint": "^16.5.0",
    "stylelint-config-standard-scss": "^13.1.0",
    "stylelint-order": "^6.0.4",
    "stylelint-scss": "^6.3.0",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4",
    "webpack-remove-empty-scripts": "^1.0.4"
  },
  "packageManager": "pnpm@9.1.1",
  "engines": {
    "pnpm": ">=9",
    "node": ">=20"
  },
  "eslintConfig": {
    "extends": [
      "../../../web/core/.eslintrc.passing.json",
      "airbnb-base"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "proseWrap": "always",
    "bracketSameLine": true
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard-scss",
      "../../../web/core/.stylelintrc.json"
    ],
    "plugins": [
      "stylelint-scss"
    ]
  }
}
