{
    "name": "maks-oleksyuk/drupal-notes",
    "description": "Project for my notes and tests.",
    "license": "GPL-3.0-or-later",
    "type": "project",
    "require": {
        "php": ">=8.3",
        "composer/installers": "^2.2",
        "drupal-notes/nts_core": "^1.0@dev",
        "drupal-notes/nts_theme": "^1.0@dev",
        "drupal/admin_toolbar": "^3.4",
        "drupal/core-composer-scaffold": "^10.2",
        "drupal/core-recommended": "^10.2",
        "drupal/gin": "^3.0@RC",
        "drupal/gin_login": "^2.0",
        "drush/drush": "^12.5",
        "skilldlabs/drupal-cleanup": "^1.4"
    },
    "require-dev": {
        "chi-teck/drupal-coder-extension": "^2.0@beta",
        "mglaman/drupal-check": "^1.4",
        "palantirnet/drupal-rector": "^0.20",
        "vincentlanglet/twig-cs-fixer": "^2.10"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        {
            "type": "path",
            "url": "app/**/*"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "drupal/core-composer-scaffold": true,
            "skilldlabs/drupal-cleanup": true,
            "phpstan/extension-installer": true
        },
        "sort-packages": true
    },
    "extra": {
        "drupal-cleanup": {
            "drupal-core": [
                "tests",
                "modules/*/tests",
                "modules/*/src/Tests",
                "themes/*/tests",
                "themes/*/src/Tests",
                "profiles/demo_umami",
                "profiles/*test*",
                "profiles/*/tests"
            ],
            "drupal-module": [
                "tests",
                "src/Tests"
            ],
            "drupal-theme": [
                "tests",
                "src/Tests"
            ]
        },
        "drupal-scaffold": {
            "file-mapping": {
                "[web-root]/sites/default/settings.php": "assets/scaffold/settings.php"
            },
            "locations": {
                "web-root": "web/"
            }
        },
        "installer-paths": {
            "web/core": [
                "type:drupal-core"
            ],
            "web/libraries/{$name}": [
                "type:drupal-library"
            ],
            "web/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "web/modules/custom/{$name}": [
                "type:drupal-custom-module"
            ],
            "web/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "web/themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "web/themes/custom/{$name}": [
                "type:drupal-custom-theme"
            ]
        }
    },
    "scripts": {
        "dump:db": "mkdir -p dump; drush sql:dump --structure-tables-list=cache,cache_*,search_index,watchdog > dump/db_$(date +%Y.%m.%d_%H:%M_%:::z).sql.gz --gzip",
        "dump:files": "mkdir -p dump; drush ard --files --destination=../dump/files_$(date +%Y.%m.%d_%H:%M_%:::z).tar.gz",
        "php:cs": "phpcs -ps --standard=config/phpcs.xml",
        "php:cbf": "phpcbf -ps --standard=config/phpcs.xml",
        "phpstan": "phpstan --configuration=config/phpstan.neon",
        "rector": "rector process app --dry-run",
        "rector:fix": "rector process app",
        "lint:twig": "twig-cs-fixer lint --config=config/.twig-cs-fixer.php ./app/Drupal --ansi",
        "lint:twig:fix": "twig-cs-fixer lint --config=config/.twig-cs-fixer.php ./app/Drupal --fix"
    },
    "scripts-descriptions": {
        "dump:db": "Dump database using Drush in dump directory",
        "dump:files": "Archive public files using Drush in dump directory",
        "php:cs": "Check php for Drupal code style",
        "php:cbf": "Fix php Drupal code style",
        "lint:twig": "Check twig files for code style",
        "lint:twig:fix": "Fix twig files code style"
    }
}
