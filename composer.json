{
	"name": "maks-oleksyuk/typo3-notes",
	"description": "Project for my notes and tests.",
	"license": "GPL-3.0-or-later",
	"type": "project",
	"require": {
		"php": "^8.3",
		"apache-solr-for-typo3/solr": "^12.0",
		"helhum/dotenv-connector": "^3.1",
		"helhum/typo3-console": "^8.1",
		"networkteam/solr-commands": "dev-master",
		"typo3-notes/nts_site": "^1.0@dev",
		"typo3/cms-backend": "^12.4",
		"typo3/cms-belog": "^12.4",
		"typo3/cms-beuser": "^12.4",
		"typo3/cms-core": "^12.4",
		"typo3/cms-extbase": "^12.4",
		"typo3/cms-extensionmanager": "^12.4",
		"typo3/cms-felogin": "^12.4",
		"typo3/cms-filelist": "^12.4",
		"typo3/cms-fluid": "^12.4",
		"typo3/cms-fluid-styled-content": "^12.4",
		"typo3/cms-form": "^12.4",
		"typo3/cms-frontend": "^12.4",
		"typo3/cms-install": "^12.4",
		"typo3/cms-lowlevel": "^12.4",
		"typo3/cms-reports": "^12.4",
		"typo3/cms-rte-ckeditor": "^12.4",
		"typo3/cms-scheduler": "^12.4",
		"typo3/cms-seo": "^12.4",
		"typo3/cms-setup": "^12.4",
		"typo3/cms-sys-note": "^12.4",
		"typo3/cms-t3editor": "^12.4",
		"typo3/cms-tstemplate": "^12.4",
		"typo3fluid/fluid": "^2.15"
	},
	"require-dev": {
		"b13/make": "^0.1",
		"helmich/typo3-typoscript-lint": "^3.2",
		"lolli/dbdoctor": "^0.6",
		"pagemachine/typo3-phinx": "^1.1",
		"saschaegerer/phpstan-typo3": "^1.10",
		"ssch/typo3-rector": "^2.10",
		"typo3/coding-standards": "^0.8"
	},
	"repositories": {
		"packages": {
			"type": "path",
			"url": "ext/*"
		}
	},
	"config": {
		"allow-plugins": {
			"helhum/dotenv-connector": true,
			"typo3/class-alias-loader": true,
			"typo3/cms-composer-installers": true
		},
		"platform": {
			"php": "8.3"
		},
		"sort-packages": true
	},
	"extra": {
		"typo3/cms": {
			"web-dir": "web"
		}
	},
	"scripts": {
		"post-autoload-dump": [
			"typo3 install:fixfolderstructure"
		],
		"dump:db": "BACKUP_NAME=db_$(date +%Y.%m.%d_%H:%M_%:::z) && mkdir -p ./../dump && typo3cms database:export -c Default -e 'cf_*' -e 'cache_*' -e '[bf]e_sessions' -e sys_log -e sys_history > ${BACKUP_NAME}.sql && tar -czvf ./../dump/${BACKUP_NAME}.tar.gz ${BACKUP_NAME}.sql && rm ${BACKUP_NAME}.sql"
	},
	"scripts-descriptions": {
		"dump:db": "Dump database to arhive using Typo3 in dump directory"
	}
}
