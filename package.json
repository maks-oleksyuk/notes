	},
	"devDependencies": {
		"cspell": "^8.14.4",
		"prettier": "^3.3.3"
	},
	"packageManager": "pnpm@9.10.0",
	"engines": {
		"pnpm": ">=9",
		"node": ">=20"
	},
	"prettier": {
		"singleQuote": true,
		"proseWrap": "always",
		"bracketSameLine": true
	}
}
